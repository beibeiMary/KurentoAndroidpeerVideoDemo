<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/blue</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleWhite">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/button_text_color</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="TextStyleHeader">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyleSmall">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleSmallThin">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@drawable/button_text_color</item>
    </style>
</resources>
